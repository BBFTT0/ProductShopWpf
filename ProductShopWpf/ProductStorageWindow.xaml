<Window x:Class="ProductShopWpf.ProductStorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductShopWpf"
        mc:Ignorable="d"
        Title="Список товаров" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <ListBox x:Name="productListBox" Margin="0 0 0 10"/>
            <Button Content="Добавить" Click="AddProductButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <Button Content="Редактировать" Click="EditButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <Button x:Name="deleteProductButton" Content="Удалить" Click="DeleteProductButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Window>
